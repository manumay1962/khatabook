<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Khaatabook</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-[#f9f9fb] font-['Inter'] text-gray-800">
  <main class="w-full min-h-screen">
    
    <!-- Navbar -->
    <nav class="flex justify-between items-center px-8 py-6 bg-white shadow-sm sticky top-0 z-50">
      <h3 class="text-3xl font-bold text-indigo-600 tracking-tight">Khaatabook</h3>
      <div class="flex gap-6 text-base font-medium">
        <a href="/" class="text-gray-700 hover:text-indigo-600 transition">Home</a>
        <a href="/create" class="text-gray-700 hover:text-indigo-600 transition">Create New Hisaab</a>
      </div>
    </nav>

    <!-- Content -->
    <div class="px-8 pt-12">
      <h3 class="text-2xl font-semibold mb-6">All Hisaab Kitaab</h3>

      <% if(files.length > 0) { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
          <% files.forEach(file => { %>
            <div class="bg-indigo-500 text-white rounded-xl px-6 py-5 shadow-md hover:shadow-lg transition duration-200 flex justify-between items-center group">

              <!-- File name + go button -->
              <div class="flex gap-4 items-center">
                <h3 class="text-xl font-semibold tracking-tight"><%= file.split(".")[0] %></h3>
                <a href="/hisaab/<%=file%>" class="bg-white text-indigo-600 rounded-full p-2 hover:bg-gray-100 transition">
                  <i class="ri-arrow-right-line text-xl"></i>
                </a>
              </div>

              <!-- Edit/Delete buttons -->
              <div class="flex items-center gap-4">
                <a href="/edit/<%= file %>" title="Edit">
                  <i class="ri-pencil-line text-white hover:text-yellow-300 text-lg transition"></i>
                </a>
                <a href="/delete/<%= file%>" title="Delete">
                  <i class="ri-delete-bin-line bg-white text-red-500 p-2 rounded-full hover:bg-gray-100 transition"></i>
                </a>
              </div>

            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="mt-8 text-gray-500 text-lg flex items-center gap-2">
          <i class="ri-inbox-line text-2xl"></i> No Hisaabs To Show. Create one to get started.
        </div>
      <% } %>
    </div>
  </main>
</body>

</html>
